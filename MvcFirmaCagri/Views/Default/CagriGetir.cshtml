@model MvcFirmaCagri.Models.Entity.TblCagrilar
@{
    ViewBag.Title = "CagriGetir";
    Layout = "~/Views/Shared/FirmaLayout.cshtml";
}

<h2>Çağrı Düzenleme Sayfası</h2>
<br />
@using (Html.BeginForm("CagriDuzenle", "Default", FormMethod.Post))
{
    @Html.HiddenFor(x => x.ID)
    @Html.Label("Konu")
    @Html.TextBox("Konu", null, new { @class = "form-control" })
    <br />
    @Html.Label("Açıklama")
    @Html.TextAreaFor(x => x.Aciklama, 10, 4, new { @class = "form-control" })
    <br />
    <button type="submit" class="btn btn-primary">Kaydet</button>
}


